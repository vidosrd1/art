<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h3 class="block 1font-medium mb-1 text-3xl">
      <%= @qr_code.url %></h3>
    <br />
    <ul class="nav navbar-nav">
      <li style="width:650px; heigh:auto" class="">
      <% if @qr_code.logo.attached? %>
        <%= link_to image_tag(@qr_code.logo,
        style:"width:200px; heigh:auto"), @qr_code.logo %>
      <% end %>
      </li>
      <li style="width:650px; heigh:auto" class="">
      <% if @qr_code.original_image.attached? %>
        <%= link_to image_tag(@qr_code.original_image,
        style:"width:200px; heigh:auto"), @qr_code.original_image %>
      <% end %>
      </li>
      <li style="width:650px; heigh:auto" class="">
      <% if @qr_code.combined_image.attached? %>
        <%= link_to image_tag(@qr_code.combined_image,
        style:"width:200px; heigh:auto"), @qr_code.combined_image %>
      <% end %>
      </li>
    </ul>
    <br />
    <div class="1flex justify-between items-center">
      <% if user_signed_in? %>
        <%= link_to "Edit this qr_code", edit_qr_code_path(@qr_code),
        class: "bg-green-700 mt-1 rounded-lg py-2 px-3
        text-white 1bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-1">
          <%= button_to "Destroy this qr_code", qr_code_path(@qr_code), method: :delete,
          class: "bg-red-600 mt-1 rounded-lg py-2 px-3
          text-white 1bg-gray-100 font-medium" %>
        </div>
      <% end %>
      <%= link_to "Back to qr_codes", qr_codes_path,
      class: "bg-gray-500 ml-1 mt-1 rounded-lg py-2 px-3
      text-white 1bg-gray-100 1inline-block font-medium" %>
      <div class="inline-block ml-1">
        <%= link_to "New qr_code", new_qr_code_path,
        class: "bg-blue-700 mt-1 rounded-lg py-2 px-3
        1block inline-block font-medium text-white" %>
      </div>
    </div>
    <br />
  </div>
</div>
