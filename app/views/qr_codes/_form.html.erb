<%= form_with(model: qr_code, class: "contents") do |form| %>
  <% if qr_code.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(qr_code.errors.count, "error") %> prohibited this qr_code from being saved:</h2>

      <ul>
        <% qr_code.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: "block
    shadow rounded-md border border-gray-400
    outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.label :logo, style: "display: block" %>
    <%= form.file_field :logo,
    accept: "image/png",
    class: "block shadow rounded-md 1border 1border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 1w-full" %>
  </div>
<br />
  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-3 bg-blue-600
    dark:text-slate-800 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
