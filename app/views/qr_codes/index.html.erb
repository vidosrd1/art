<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Qr codes" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Qr codes</h1>
    <%= link_to "New qr code", new_qr_code_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="qr_codes" class="min-w-full">
    <% @qr_codes.each do |qr_code| %>
    <div class="row mt-4 clearfix">
      <div class="col-8 col-sm-8 col-md-9 col-lg-9">
        <h5 class="mt-0 mb-1">
          <a href="/qr_codes/<%= qr_code.id %>",
          class="nav-link"><%= qr_code.url %></a>
        </h5>
      </div>
      <div class="col-4 col-sm-4 col-md-3 col-lg-3 clearfix">
        <% if qr_code.logo.attached? %>
          <%= link_to image_tag(qr_code.logo,
          style:"width:270px; heigh:auto"), qr_code.logo %>
        <% end %>
      </div>
      <div class="col-4 col-sm-4 col-md-3 col-lg-3 clearfix">
        <% if qr_code.original_image.attached? %>
          <%= link_to image_tag(qr_code.original_image,
          style:"width:270px; heigh:auto"), qr_code.original_image %>
        <% end %>
      </div>
    </div>
    <hr />
    <% end %>
  </div>
  <br />
</div>
