<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <br />
    <div class="1flex justify-between items-center">
      <% if user_signed_in? %>
        <%= link_to "Edit this list", edit_list_path(@list),
        class: "bg-green-700 mt-1 rounded-lg py-2 px-3
        text-white 1bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-1">
          <%= button_to "Destroy this list", list_path(@list), method: :delete,
          class: "bg-red-600 mt-1 rounded-lg py-2 px-3
          text-white 1bg-gray-100 font-medium" %>
        </div>
      <% end %>
      <%= link_to "Back to lists", lists_path,
      class: "bg-gray-500 ml-1 mt-1 rounded-lg py-2 px-3
      text-white 1bg-gray-100 1inline-block font-medium" %>
      <div class="inline-block ml-1">
        <%= link_to "New list", new_list_path,
        class: "bg-blue-700 mt-1 rounded-lg py-2 px-3
        1block inline-block font-medium text-white" %>
      </div>
    </div>
    <br />
    <h3 class="block 1font-medium mb-1 text-3xl">
      <%= @list.title %></h3>
    <h5 class="block 1font-medium mb-1 text-2xl">
      <%= @list.name %></h5>
    <h5 class="block font-medium mb-1 text-1xl">
      Art: <%= @list.art.name %>
    </h5>
    <br />
    <div id="navbar" class="1collapse">
      <ul class="nav navbar-nav">
        <li style="width:650px; heigh:auto" class="">
          <p style="width:650px; heigh:auto">
          <% if @list.image.attached? %>
            <%= link_to image_tag(@list.image,
            style:"width:640px; heigh:auto"), @list.image %>
          <% end %>
          </p>
        <li><br /></li>
        <li class="">
          <p style="width:400px; heigh:200px">
            <%= @list.body %>
          </p>
          <br />
        </li>
      </ul>
    </div>
    <div class="1flex justify-between items-center">
      <% if user_signed_in? %>
        <%= link_to "Edit this list", edit_list_path(@list),
        class: "bg-green-700 mt-1 rounded-lg py-2 px-3
        text-white 1bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-1">
          <%= button_to "Destroy this list", list_path(@list), method: :delete,
          class: "bg-red-600 mt-1 rounded-lg py-2 px-3
          text-white 1bg-gray-100 font-medium" %>
        </div>
      <% end %>
      <%= link_to "Back to lists", lists_path,
      class: "bg-gray-500 ml-1 mt-1 rounded-lg py-2 px-3
      text-white 1bg-gray-100 1inline-block font-medium" %>
      <div class="inline-block ml-1">
        <%= link_to "New list", new_list_path,
        class: "bg-blue-700 mt-1 rounded-lg py-2 px-3
        1block inline-block font-medium text-white" %>
      </div>
    </div>
    <br />
  </div>
</div>
