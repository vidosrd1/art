<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div class="my-5">
  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image,
    class: "block shadow rounded-md 1border 1border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 1w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :art %>
    <%= form.select :art_id,
    options_for_select(Art.all.map {
      |art| [art.name, art.id]
      }) %>
  </div>
  <div class="my-5">
    <%= form.label :body, style: "display: block" %>
    <%= form.rich_text_area :body %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-3 bg-blue-600
    dark:text-slate-800 text-white inline-block font-medium cursor-pointer"
    %>
  </div>
<% end %>
