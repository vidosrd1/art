<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <br />
    <div class="flex justify-between items-center">
    <h3><%= @list.title %></h3>
    <h5><%= @list.name %></h5>
    <h5>
      <strong class="block font-medium mb-1">Art:</strong>
      <%= @list.art.name %>
    </h5>
    <div id="navbar" class="1collapse">
      <ul class="nav navbar-nav">
        <li style="width:650px; heigh:auto" class="">
          <p style="width:650px; heigh:auto">
          <% if @list.image.attached? %>
            <%= link_to image_tag(@list.image,
            style:"width:640px; heigh:auto"), @list.image %>
          <% end %>
          </p>
        <li><hr /></li>
        <li class="">
          <p style="width:400px; heigh:200px">
            <%= @list.body %>
          </p>
          <hr />
        </li>
      </ul>
    </div>
    <div>
      <% if user_signed_in? %>
      <%= link_to 'Edit this list', edit_list_path(@list), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this list', list_path(@list), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <% end %>
      <%= link_to 'Back to lists', lists_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
    <br />
  </div>
</div>
