<%= link_to "Back to arts", arts_path,
class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

<% if user_signed_in? %>
<br />
<div class="flex justify-between items-center">
  <%= link_to 'New art', new_art_path,
  class: "rounded-lg py-3 px-5 bg-blue-600
  1text-white block font-medium" %>
</div>
<% end %>
<div class="flex justify-between items-center">
  <%= render 'arts/arts-index' %>
</div>
<br />
<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl">Arts</h1>
</div>
<%= form.submit 'Search', class: "px-4 py-2 font-medium
bg-orange-400 text-neutal-900 rounded flex items-center
cursor-pointer hover:bg-orange-600 focus:ring-4 ring-0
focus:ring-orange-100" %>
<% if @pagy.count > @pagy.items %>
<div class="mt-10">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
<hr />
<% end %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Arts</h1>
    <%= link_to "New art", new_art_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="arts" class="min-w-full">
    <%= render @arts %>
  </div>
</div>
