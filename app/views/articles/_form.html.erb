<%= form_with(model: article, class: "contents") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-4">
    <%= form.label :tag, style: "display: block" %>
    <%= form.text_field :tags, class: "dark:text-slate-800",
    value: article.tags.map(&:name).join(",") %>
  </div>
  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>
  <div class="my-5">
    <%= form.label :publish %>
    <%= form.date_field :publish,
    class: "block shadow rounded-md border border-gray-200
    dark:text-slate-800 outline-none px-3 py-2 mt-2 1w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div>
    <%= form.label :pictures, style: "display: block" %>
    <%= form.file_field :pictures, multiple: true %>
  </div>
  <br />
  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-3 bg-blue-600
    dark:text-slate-800 text-white inline-block font-medium cursor-pointer"
    %>
  </div>
<% end %>
